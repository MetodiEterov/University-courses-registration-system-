@model DomainLayer.DTOs.StudentLogin
@{
	ViewData["Title"] = "Login page";
}

<link href="~/css/Login.css" rel="stylesheet" />

<div class="container">
	<div class="card mx-auto shadowStyle">
		<h5 class="card-header tableHeader">Login:</h5>
		<div class="card-body">
			<form method="post" class="textCenter" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]">
				<div class="form-group textLeft">
					<label for="studentEmail">Email:</label>
					<input type="text" class="form-control marginTop10" id="studentEmail" name="studentEmail">
				</div>
				<div class="form-group textLeft">
					<label for="studentPassword">Password:</label>
					<input type="Password" class="form-control marginTop10" id="studentPassword" name="studentPassword">
				</div>
				<button type="submit" class="btn btn-secondary marginTop10" id="loginBtn">Login</button>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}

	<script src="~/js/ajaxrequest.js"></script>

	<script>
		let tempData = "@TempData["Errors"]";
	</script>
}

